<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <div class="form-box">
        <h2>Add new ingredient for <strong><%= @cocktail.name %></strong></h2>
        <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%= f.input :description %>
          <%= f.input :ingredient, collection: @ingredients %>
          <%= f.submit "Add Ingredient", class: "btn btn-primary" %>
        <% end %>
      </div>

      <p><%= link_to "Back to Cocktail", cocktails_path, class: "btn btn-primary" %></p>
    </div>
  </div>
</div>
