<div class="banner" style="background-image: linear-gradient(-225deg, rgba(58,0,0,0.5) 0%, rgba(58,0,0,0.7) 50%), url('http://royalcottagenp.com/wp-content/uploads/2018/02/s5.jpg');">
  <div class="banner-content">
    <h1>Cocktailr.</h1>
    <p>Professionally Tailored Cocktails</p>

    <div class="searchbar">
      <%= form_tag(cocktails_path method: :get) do %>
        <%= text_field_tag :term, params[:term] %>
        <%= submit_tag 'Search', name: nil, class: "btn btn-primary btn-landing" %>
      <% end %>
    </div>

  </div>
</div>
