<div class="container text-center index-box" id="summary">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">

    <h1 class="index-title">All Cocktails</h1>
      <% if @term == nil %>
      <% "" %>
      <% else %>
      <p><strong><%= @cocktails.size %></strong> search result for <strong><%= @term %></strong></p>
      <% end %>

      <%= cl_image_tag("dkp7jzp3hbnsixdegyfb",
      width: 400, height: 300, crop: :fill) %>

      <div class="row">


          <% @cocktails.each do |cocktail| %>
          <div class="col-sm-6 col-md-4">
            <div class="cocktail">

              <div class="cocktail-hover">
                <%= link_to cocktail_path(cocktail) do %>
                  <i class="fas fa-glass-martini"></i>
                  <p>View Ingredients </p>
                <% end %>
              </div>

              <div class="cocktail-details">
                <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
              </div>
            </div>
          </div>
          <% end %>

      </div>

      <span class="index-footer"></span>

      </div>
    </div>
  </div>

